{
	"name": "PrestaShop",
	"dockerComposeFile": "docker-compose.yml",
	"service": "prestashop",
	"workspaceFolder": "/var/www/html/modules/stancer",
	"customizations": {
		"vscode": {
			"extensions": [
				"aswinkumar863.smarty-template-support",
				"bmewburn.vscode-intelephense-client",
				"editorconfig.editorconfig",
				"esbenp.prettier-vscode",
				"higoka.php-cs-fixer",
				"mrmlnc.vscode-apache",
				"stylelint.vscode-stylelint",
				"xdebug.php-debug"
			],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.formatOnSave": true,
				"editor.rulers": [
					120
				],
				"intelephense.stubs": [
					"vendor/stancer/php-stubs-prestashop/stubs",
					"apache",
					"bcmath",
					"bz2",
					"calendar",
					"com_dotnet",
					"Core",
					"ctype",
					"curl",
					"date",
					"dba",
					"dom",
					"enchant",
					"exif",
					"FFI",
					"fileinfo",
					"filter",
					"fpm",
					"ftp",
					"gd",
					"gettext",
					"gmp",
					"hash",
					"iconv",
					"imap",
					"intl",
					"json",
					"ldap",
					"libxml",
					"mbstring",
					"meta",
					"mysqli",
					"oci8",
					"odbc",
					"openssl",
					"pcntl",
					"pcre",
					"PDO",
					"pdo_ibm",
					"pdo_mysql",
					"pdo_pgsql",
					"pdo_sqlite",
					"pgsql",
					"Phar",
					"posix",
					"pspell",
					"random",
					"readline",
					"Reflection",
					"session",
					"shmop",
					"SimpleXML",
					"snmp",
					"soap",
					"sockets",
					"sodium",
					"SPL",
					"sqlite3",
					"standard",
					"superglobals",
					"sysvmsg",
					"sysvsem",
					"sysvshm",
					"tidy",
					"tokenizer",
					"xml",
					"xmlreader",
					"xmlrpc",
					"xmlwriter",
					"xsl",
					"Zend OPcache",
					"zip",
					"zlib"
				],
				"php-cs-fixer.configFile": "${containerWorkspaceFolder}/.php-cs-fixer.dist.php",
				"php-cs-fixer.executable": "${containerWorkspaceFolder}/vendor/bin/php-cs-fixer",
				"php.validate.executablePath": "/usr/local/bin/php",
				"[php]": {
					"editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
				}
			}
		}
	},
	"postAttachCommand":"/post-attach",
	"portsAttributes": {
		"9003": {
			"label": "xdebug"
		}
	},
	"remoteUser": "vscode"
}
